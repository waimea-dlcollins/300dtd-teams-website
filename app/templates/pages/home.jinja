{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo

{% endblock %}


{% block content %}

    <h1>Team Manager Website</h1>

    <p>This is a simple Flask app that can be used to create and store teams, that are managed by creators.</p>

<article>
 <h1>teams:</h1>
       
  {% for team in teams %}

    <p>
    <span class="name">{{ teams.name }}</span> 
    <span class="code">{{ teams.code }}</span> 
    <span class="description">{{ teams.description }}</span> 
    <span class="website">{{ teams.website }}</span> 
    <span class="manager">{{ teams.manager }}</span> 

    </p>

  {% else %}

    <p>None!</p>

  {% endfor %}

</article>

<article>
  <article>
    <form action="/add-team" method="POST">
      <h1>Add a team</h1>
      <input
        type="text"
        name="name"
        placeholder="team name"
        required
      >
 
      <input
        type="text"
        code="code"
        placeholder="team code"
        required
      >

      <input
        type="text"
        description="description"
        placeholder="team description"
        required
      >

      <input
        type="text"
        website="website"
        placeholder="team website"
        required
      >

      
      <input
        type="integer"
        manager="manager"
        placeholder="team manager"
        required
      >
     
 <a href="/" role="button"> add team</a>
    </form>
  </article>

  {% endblock %}






